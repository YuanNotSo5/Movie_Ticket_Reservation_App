<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holderContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_color">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="170dp"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgFilm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/nameFilmItemTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Migration"
                android:textColor="#000000"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/timeItemTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="1h30"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/rateItemTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Điểm đánh giá"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/cateItemTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Thể loại"
                android:textColor="#000000"
                android:textSize="16dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>